@model List<CarDealershipAPI.Models.Site.Special>
@{
    ViewBag.Title = "Specials";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h2 class="text-center">Specials</h2>
    </div>
</div>

@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Admin"))
    {
        <div class="row">
            <div class="col-10 mx-auto">
                @Html.ActionLink("Manage Specials", "Specials", "Admin")
            </div>
        </div>
    }
}
@for (int i = 0; i < Model.Count; i++)
{
    <div class="row">
        <div class="col-10 mx-auto">
            <div class="card mt-1" style="width: 100%;">
                <div class="card-body">
                    <div class="row">
                        <div class="col-2">
                            <img src="~/Content/images/dollarsign.png" style="width: 65%; height: 65%;" alt="special image"/>
                        </div>
                        <div class="col-8">
                            <div clas="row">
                                <h4 class="text-center">@Model.ElementAt(i).SpecialTitle</h4>
                            </div>
                            <div class="row">
                                <p>@Model.ElementAt(i).SpecialDescription</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
}