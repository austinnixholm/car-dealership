@model CarDealershipAPI.Models.ViewModels.MakeListViewModel
@{
    ViewBag.Title = "Makes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-8">
    <h2>Makes</h2>
    @using (Html.BeginForm("Makes", "Admin", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        <div clas="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <label for="makeTextBox" class="mr-1 mt-1">New Make</label>
                        @Html.TextBoxFor(m=>m.NewMake.MakeName)
                        <button type="submit" class="btn btn-secondary ml-2">Save</button>
                    </div>
                </div>
            </div>
        </div>
        </div>
    }
    <table class="table table-striped mt-1">
        <thead>
        <td>Make</td>
        <td>Date Added</td>
        <td>User</td>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.ViewModels.Count; i++)
            {
                <tr>
                    <td>@Model.ViewModels[i].Make.MakeName</td>
                    <td>@Model.ViewModels[i].Make.DateAdded.ToString("MM/dd/yyyy")</td>
                    <td>@Model.ViewModels[i].StaffMemberEmail</td>
                </tr>
            }
        </tbody>
    </table>
</div>


