@using CarDealershipAPI.Models.ViewModels
@model List<CarDealershipAPI.Models.ViewModels.UserViewModel>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        footer {
            display: none;
        }

        foot {
            position: fixed;
            left: 0;
            bottom: 0;
            text-align: center;
            width: 100%;
        }
    </style>
</head>
<h2>Users</h2>
@Html.ActionLink("Add a new User", "AddUser", "Admin")
<table class="table table-striped">
    <thead>
    <td>Name</td>
    <td>Email</td>
    <td>Role</td>
    <td></td>
    </thead>
    <tbody>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@Model[i].User.Name</td>
            <td>@Model[i].User.Email</td>
            <td>@Model[i].Role</td>
            <td>@Html.ActionLink("Edit", "EditUser", "Admin", new {userID = @Model[i].User.StaffID}, null)</td>
        </tr>
    }
    </tbody>
</table>
<foot class="text-center">
    <hr/>
